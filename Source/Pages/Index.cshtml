@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>Manage the list of your favorite books</h2>

    <form method="post">
        <button class="btn-outline-success" id="login-btn" asp-area="" asp-page="/Auth/Login">
            Log In
        </button>
        <button class="btn-outline-success" id="register-btn" asp-area="" asp-page="/Auth/Register">
            Create account
        </button>
    </form>
</div>
