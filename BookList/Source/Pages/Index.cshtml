@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <br>
    <h3>Join now to manage the list of your favorite books</h3>

    <form method="post">
        <input type="submit" id="login-btn" asp-area="" 
            asp-page="/Auth/Login" value="Log In">
        <input type="submit" id="register-btn" asp-area="" 
            asp-page="/Auth/Register" value="Create account">
    </form>
</div>
